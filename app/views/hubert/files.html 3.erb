<div class="container">
	<div class="row">
		<div class="col-sm-3 hidden-xs text-center">
								<div class="intHelp" id="hubert"><h1 class="omnes">?</h1></div>

		</div>
		<div class="col-sm-6 text-center">
			<div class="numerals intNumerals"><h4><%= @step_number %>/<%= @steps_max %></h4></div>
			<h4>Files</h4>
			<br>
			<%= render :layout => "companylaunch_form" do |f| %>
			<%= f.fields_for :uploads do |upload| %>
			<p>
				<%= upload.label "File" %><br>
				<%= upload.file_field :upload, rows: 3, placeholder: "Name" %>
			</p>
			
			<p>
				<%= upload.label :caption %><br>
				<%= upload.text_field :caption, rows: 3, class: "form-control", placeholder: "Role" %>
			</p>

			
				<%= upload.link_to_remove "Remove file" %>
			<p></p>
			
			<% end %>
			<%= f.link_to_add "Add file", :uploads %>
			<br>
			<div class="row">
				<div class="col-xs-4">
					<%= link_to previous_wizard_path, title: "Previous step", class: "btn btn-default pull-left" do %>
						<span class="glyphicon glyphicon-arrow-left"></span> 
					<% end %>
				</div>
				<div class="col-xs-4">
					<div class="center-block" id="textareaFeedback">
					</div>
				</div>
				<div class="col-xs-4">
					<%= button_tag type: "f.submit", title: "Save & Continue", class: "btn btn-success pull-right", id: "nextButton" do %><span class="glyphicon glyphicon-arrow-right"></span>
					<% end %>
					<% end %>
				</div>
			</div>
		</div>
		</div>
<br>
<div class="row">
		<div class="col-sm-6 col-sm-offset-3 text-center intExample" id="intExample">
			<p class="text-muted"><span class="intPink omnes">Example: </span>The company achieves that by conducting written Q and A interviews with the clients and creating automatically generated press releases with their responses.
			</p>
		</div>
	</div> <!-- /.row -->
</div> <!-- / .container -->
