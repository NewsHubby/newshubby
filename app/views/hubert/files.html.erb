<% title "Newshubby | Interview" %>

<div class="container">
	<div class="row">
		<div class="col-sm-3 hidden-xs text-center">
			<div class="intHelp" id="hubert"><h1 class="omnes">?</h1></div>
		</div>
		<div class="col-sm-6 text-center">
			<div class="numerals intNumerals"><h4><%= @step_number %>/<%= @steps_max %></h4></div>
			<h4>Attachments</h4>
			<br>
			<%= render :layout => "form" do |f| %>
			<%= f.fields_for :company_launches, @newsroom.company_launches.last do |company_launch| %>
			
			<p>
			<%= company_launch.file_field :file1, rows: 3 %>
			<%= company_launch.text_field :caption_file1, rows: 3, class: "form-control", max: 200, placeholder: "Description for first file", id: "textarea" %>
			</p>
			<br>
			<p>
			<%= company_launch.file_field :file2, rows: 3 %>
			<%= company_launch.text_field :caption_file2, rows: 3, class: "form-control", max: 200, placeholder: "Description for second file" %>
			</p>
			<br>
			<p>
			<%= company_launch.file_field :file3, rows: 3 %>
			<%= company_launch.text_field :caption_file3, rows: 3, class: "form-control", max: 200, placeholder: "Description for third file" %>
			</p>
			
			<% end %>
			<br>
			<div class="row">
				<div class="col-xs-4">
					<%= link_to previous_wizard_path, title: "Previous step", class: "btn btn-default pull-left" do %>
						<span class="glyphicon glyphicon-arrow-left"></span> 
					<% end %>
				</div>
				<div class="col-xs-4">
					<div class="center-block" id="textareaFeedback">
					</div>
				</div>
				<div class="col-xs-4">
					<%= button_tag type: "f.submit", title: "Save & Continue", class: "btn btn-success pull-right", id: "nextButton" do %><span class="glyphicon glyphicon-arrow-right"></span>
					<% end %>
					<% end %>
				</div>
			</div>
		</div>
		</div>
<br>
<div class="row">
		<div class="col-sm-6 col-sm-offset-3 text-center intExample" id="intExample">
			<p class="text-muted"><span class="intPink omnes">Tip: </span>Upload complementing files, such as high resolution images or documents (PDF/Word) relevant for your press release.
			</p>
		</div>
	</div> <!-- /.row -->
</div> <!-- / .container -->

