<% title "Newshubby | Interview" %>

<div class="container">
	<div class="row">
		<div class="col-sm-3 hidden-xs">
			<%= image_tag "mr_newshubby3.svg", class: "img-responsive center-block", id: "hubert" %><br>
		</div>
		<div class="col-sm-6 text-center">
			<div class="numerals intNumerals"><h4><%= @step_number %>/<%= @steps_max %></h4></div>
			<h3 class="omnes">Files</h3>
			<br>
			<%= render :layout => "form" do |f| %>
			<%= f.fields_for :company_launches, @newsroom.company_launches.last do |company_launch| %>
			
			<p>
			<%= company_launch.file_field :file1, rows: 3 %>
			<%= company_launch.text_field :caption_file1, rows: 3, class: "form-control", max: 200, placeholder: "Description for first file" %>
			</p>
			
			<p>
			<%= company_launch.file_field :file2, rows: 3 %>
			<%= company_launch.text_field :caption_file2, rows: 3, class: "form-control", max: 200, placeholder: "Description for second file" %>
			</p>
			
			<p>
			<%= company_launch.file_field :file3, rows: 3 %>
			<%= company_launch.text_field :caption_file3, rows: 3, class: "form-control", max: 200, placeholder: "Description for third file" %>
			</p>
			
			<% end %>
			<br>
			<div class="row">
				<div class="col-xs-4">
					<%= link_to previous_wizard_path, class: "btn btn-default pull-left" do %>
						<span class="glyphicon glyphicon-chevron-left"></span> Previous
					<% end %>
				</div>
				<div class="col-xs-4">
					<div class="center-block" id="textareaFeedback">
					</div>
				</div>
				<div class="col-xs-4">
					<%= button_tag type: "f.submit", class: "btn btn-success pull-right", id: "nextButton" do %>Next <span class="glyphicon glyphicon-chevron-right", disabled: "false"></span>
					<% end %>
					<% end %>
				</div>
			</div>
		</div>
		</div>
<br>
<div class="row">
		<div class="col-sm-6 col-sm-offset-3 text-center intExample" id="intExample">
			<p><strong>Example: </strong>The company achieves that by conducting written Q and A interviews with the clients and creating automatically generated press releases with their responses.
			</p>
		</div>
	</div> <!-- /.row -->
</div> <!-- / .container -->

