<% title "Newshubby | Interview" %>


<div class="container">
	<div class="row">
		<div class="col-sm-3 hidden-xs text-center">
								<div class="intHelp" id="hubert"><h1 class="omnes">?</h1></div>

		</div>
		<div class="col-sm-6 text-center">
			<div class="numerals intNumerals"><h4><%= @step_number %>/<%= @steps_max %></h4></div>
			<h4>How exactly does <%= @newsroom.company_name %> achieve that?</h4>
			<br>
			<%= render :layout => "form" do |f| %>
			
			<% if @newsroom.q_how_you_achieve.blank? %>
			<%= f.text_area :q_how_you_achieve, rows: 6, id: "textarea", class: "form-control", onfocus: "this.value = this.value;", max: 300, value: "The company achieves that by " %>
			<% else %>
			<%= f.text_area :q_how_you_achieve, rows: 6, id: "textarea", class: "form-control", onfocus: "this.value = this.value;", max: 300 %>
			<% end %>
			<br>
			<div class="row">
				<div class="col-xs-4">
					<%= link_to previous_wizard_path, class: "btn btn-default pull-left" do %>
						<span class="glyphicon glyphicon-arrow-left"></span> 
					<% end %>
				</div>
				<div class="col-xs-4">
					<div class="center-block" id="textareaFeedback">
					</div>
				</div>
				<div class="col-xs-4">
					<%= button_tag type: "f.submit", class: "btn btn-success pull-right", id: "nextButton" do %><span class="glyphicon glyphicon-arrow-right"></span>
					<% end %>
					<% end %>
				</div>
			</div>
		</div>
		</div>
<br>
<div class="row">
		<div class="col-sm-6 col-sm-offset-3 text-center intExample" id="intExample">
			<p class="text-muted"><span class="intPink omnes">Example: </span>The company achieves that by conducting written Q and A interviews with the clients and creating automatically generated press releases with their responses.
			</p>
		</div>
	</div> <!-- /.row -->
</div> <!-- / .container -->
