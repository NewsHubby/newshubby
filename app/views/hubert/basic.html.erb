<div class="shortPage">
	
<%= render "form" do |f| %>

<div class="container navMargin">

    <div class="question" id="q1">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3 hubertBasic text-center">
                <div class="panel panel-body">
                    <h4>Welcome! Please introduce your company</h4>
                    
												<%= f.text_field :company_name, class: "underlineInput", rows: "4", id: "textarea", onfocus: "this.value = this.value;", placeholder: "Company Name" %> was founded in <%= f.date_select :founded, order: [:month, :year] %> and our main location is in <%= f.text_field :location, class: "underlineInput", rows: "4", id: "textarea", onfocus: "this.value = this.value;", placeholder: "City, Country" %>. You can find us at <%= f.text_field :website, class: "underlineInput", rows: "4", id: "textarea", onfocus: "this.value = this.value;", placeholder: "http://www.example.com/" %> and you can reach us at <%= f.text_field :press_email, class: "underlineInput", rows: "4", id: "textarea", onfocus: "this.value = this.value;", placeholder: "example@examepl.com" %>, on Twitter <%= f.text_field :twitter, class: "underlineInput", rows: "4", id: "textarea", onfocus: "this.value = this.value;", placeholder: "@CompanyName" %> or via phone <%= f.text_field :press_phone, class: "underlineInput", rows: "4", id: "textarea", onfocus: "this.value = this.value;", placeholder: "+1 555 312 110 021" %>
												
										</div>
                </div> <!-- / .panel -->
            </div> <!-- / .col -->
        </div> <!-- / .row -->
    </div>
		
		<%= render "submit", f: f %>

</div> <!-- / .shortPage -->



<% end %>

</div>

    