<div class="container">
	<div class="row">
		<div class="col-sm-3 hidden-xs">
			<%= image_tag "mr_newshubby3.svg", class: "img-responsive center-block", id: "hubert" %><br>
		</div>
		<div class="col-sm-6 text-center">
			<div class="numerals intNumerals"><h4><%= @step_number %>/<%= @steps_max %></h4></div>
			<h3 class="omnes">Quote by the Founder - Tell me how you came up with idea for your company</h3>
			<br>
			<%= render :layout => "form" do |f| %>
			
			<%= f.fields_for :company_launches, @newsroom.company_launches.last do |company_launch| %>
			
			<% if @newsroom.company_launches.last.quote.blank? %>
			<%= company_launch.text_area :quote, rows: 6, id: "textarea", class: "form-control", onfocus: "this.value = this.value;", max: 400, value: "The idea came from " %>
			<% else %>
			<%= company_launch.text_area :quote, rows: 6, id: "textarea", class: "form-control", onfocus: "this.value = this.value;", max: 400 %>
			<% end %>
			<% end %>
			<br>
			<div class="row">
				<div class="col-xs-4">
					<%= link_to previous_wizard_path, class: "btn btn-default pull-left" do %>
						<span class="glyphicon glyphicon-chevron-left"></span> Previous
					<% end %>
				</div>
				<div class="col-xs-4">
					<div class="center-block" id="textareaFeedback">
					</div>
				</div>
				<div class="col-xs-4">
					<%= button_tag type: "f.submit", class: "btn btn-success pull-right", id: "nextButton" do %>Next <span class="glyphicon glyphicon-chevron-right"></span>
					<% end %>
					<% end %>
				</div>
			</div>
		</div>
		</div>
