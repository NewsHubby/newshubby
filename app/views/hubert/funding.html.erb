<% title "Newshubby | Interview" %>

<div class="container">
	<div class="row">
		<div class="col-sm-3 hidden-xs">
			<%= image_tag "mr_newshubby3.svg", class: "img-responsive center-block", id: "hubert" %><br>
		</div>
		<div class="col-sm-6 text-center">
			<div class="numerals intNumerals"><h4><%= @step_number %>/<%= @steps_max %></h4></div>
			<h3 class="omnes">How is <%= @newsroom.company_name %> funded?</h3>
			<br>
			<%= render :layout => "form" do |f| %>
			<%= f.fields_for :fundings do |funding| %>
			<div class="panel panel-default">
				<div class="panel-body">
			<p>
			<%= funding.label :investment_type %>&emsp;
			<%= funding.select :investment_type, ["Private Investor", "Venture Capital", "Bootstrapped", "No funding"], rows: 3, id: "textarea", class: "form-control", onfocus: "this.value = this.value;", max: 200, placeholder: "Name" %>
			</p>
			
			<p>
			<%= funding.text_field :name, rows: 3, id: "textarea", class: "form-control", max: 200, placeholder: "Name" %>
			</p>
			
			<p>
			
					<div class="form-group">
						<div class="input-group">
						<div class="input-group-addon">
							$
						</div>
					<%= funding.number_field :amount, class: "form-control", placeholder: "Amount"  %>
				</div>
			</div>

			</p>
			
			<p>
			<%= funding.date_select :date, order: [:month, :year], rows: 3, id: "textarea", class: "form-control" %>
			</p>
			
			<%= funding.link_to_remove "Remove", class: "btn btn-danger omnes" %>
		</div>
	</div>
		<% end %>
			
			<p><%= f.link_to_add "Add funding", :fundings, class: "btn btn-success omnes" %></p>
			
			<br>
			<div class="row">
				<div class="col-xs-4">
					<%= link_to previous_wizard_path, class: "btn btn-default pull-left" do %>
						<span class="glyphicon glyphicon-chevron-left"></span> Previous
					<% end %>
				</div>
				<div class="col-xs-4">

				</div>
				<div class="col-xs-4">
					<%= button_tag type: "f.submit", class: "btn btn-success pull-right", id: "nextButton" do %>Next <span class="glyphicon glyphicon-chevron-right"></span>
					<% end %>
					<% end %>
				</div>
			</div>
		</div>
		</div>
<br>
<div class="row">
		<div class="col-sm-6 col-sm-offset-3 text-center intExample" id="intExample">
		</div>
	</div> <!-- /.row -->
</div> <!-- / .container -->
