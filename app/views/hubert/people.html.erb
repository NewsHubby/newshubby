<% title "Newshubby | Key People" %>


<div class="container">
	<div class="row">
		<div class="col-sm-3 hidden-xs">
			<%= image_tag "mr_newshubby3.svg", class: "img-responsive center-block", id: "hubert" %><br>
		</div>
		<div class="col-sm-6 text-center">
			<div class="numerals intNumerals"><h4><%= @step_number %>/<%= @steps_max %></h4></div>
			<h3 class="omnes"><%= @newsroom.company_name.possessive %> key people</h3>
			<br>
			<%= render :layout => "form" do |f| %>
			<%= f.fields_for :people do |person| %>
			
			<div class="panel panel-default">
				<div class="panel-body">
					<%= person.link_to_remove do %><span class="nrContactIcons glyphicon glyphicon-remove"></span><% end %><br><br>
			<p>
				<%= person.label :founder %>
				<%= person.check_box :founder %>
			</p>
			<p>
				<%= person.text_field :name, rows: 3, class: "form-control", placeholder: "Name" %>
			</p>
			
			<p>
				<%= person.text_field :role, rows: 3, class: "form-control", placeholder: "Role" %>
			</p>
			
			<p>
				<%= person.text_area :presentation, rows: 3, class: "form-control",  placeholder: "Presentation" %>
			</p>
			
			</div>
		</div>
		<% end %>
		
			<p><%= f.link_to_add "Add new person", :people, class: "btn btn-success omnes", role: "button" %></p>
			<br>
			<br>
			<div class="row">
				<div class="col-xs-4">
					<%= link_to previous_wizard_path, class: "btn btn-default pull-left" do %>
						<span class="glyphicon glyphicon-chevron-left"></span> Previous
					<% end %>
				</div>
				<div class="col-xs-4">
					<div class="center-block" id="textareaFeedback">
					</div>
				</div>
				<div class="col-xs-4">
					<%= button_tag type: "f.submit", class: "btn btn-success pull-right", id: "nextButton" do %>Next <span class="glyphicon glyphicon-chevron-right"></span>
					<% end %>
					<% end %>
				</div>
			</div>
		</div>
		</div>
<br>
<div class="row">
		<div class="col-sm-6 col-sm-offset-3 text-center intExample" id="intExample">
			<p><strong>Example: </strong>The company achieves that by conducting written Q and A interviews with the clients and creating automatically generated press releases with their responses.
			</p>
		</div>
	</div> <!-- /.row -->
</div> <!-- / .container -->
