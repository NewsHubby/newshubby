    <div class="question" id="q1">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3 hubertBasic text-center">
                <div class="panel panel-body">
                    <h4>Welcome! Please introduce your company</h4>
                    
												<%= f.text_field :company_name, class: "underlineInput", rows: "4", id: "textarea", onfocus: "this.value = this.value;", placeholder: "Company Name" %> was founded in <%= f.date_select :founded, order: [:month, :year] %> and our main location is in <%= f.text_field :location, class: "underlineInput", rows: "4", id: "textarea", onfocus: "this.value = this.value;", placeholder: "City, Country" %>. You can find us at <%= f.text_field :website, class: "underlineInput", rows: "4", id: "textarea", onfocus: "this.value = this.value;", placeholder: "http://www.example.com/" %> and you can reach us at <%= f.text_field :press_email, class: "underlineInput", rows: "4", id: "textarea", onfocus: "this.value = this.value;", placeholder: "example@examepl.com" %>, on Twitter <%= f.text_field :twitter, class: "underlineInput", rows: "4", id: "textarea", onfocus: "this.value = this.value;", placeholder: "@CompanyName" %> or via phone <%= f.text_field :press_phone, class: "underlineInput", rows: "4", id: "textarea", onfocus: "this.value = this.value;", placeholder: "+1 555 312 110 021" %>
												
										</div>
                </div> <!-- / .panel -->
            </div> <!-- / .col -->
        </div> <!-- / .row -->
    </div>

    <div class="question" id="q2">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
							<h4>Your company's key people</h4>
                <%= f.fields_for :people do |person| %>
								<div class="panel panel-body">
		                        <%= person.link_to_remove do %><i class="fa fa-close pull-right"></i><% end %>
                        
														<%= person.text_field :name, class: "form-control", placeholder: "Name" %><br>
														Founder <%= person.check_box :founder, class: "text-left" %>
														<%= person.text_field :role, class: "form-control", placeholder: "Role"  %><br>
														<%= person.text_area :presentation, class: "form-control", placeholder: "Presentation" %><br>
												
										
		            </div> <!-- / .col-xs-12 -->
								<% end %>
								<p class="text-center"><%= f.link_to_add :people do %> + Add person<% end %></p>
		        </div> <!-- / .row -->
		    </div> <!-- / .container-fluid -->
		</div> <!-- / .question -->



    <div class="question" id="q3">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="panel panel-body">
		                        <p class="panel-title text-left">What does <%= @newsroom.company_name %> do?</p>
													<% if @newsroom.q_what_you_do.blank? %>
														<%= f.text_area :q_what_you_do, class: "form-control fixed-textarea", rows: "4", id: "textarea", onfocus: "this.value = this.value;", value: "#{@newsroom.company_name} " %>
													<% else %>
														<%= f.text_area :q_what_you_do, class: "form-control fixed-textarea", rows: "4", id: "textarea", onfocus: "this.value = this.value;" %>
													<% end %>
												<h5>
                            <span class="text-primary"><strong>Example: </strong></span>
                        </h5>
                        <p>
                            NewsHubby is offering a DIY press release tool for tech companies that want to reach media worldwide and get the viral spread.
                        </p>
		            </div> <!-- / .col-xs-12 -->
		        </div> <!-- / .row -->
		    </div> <!-- / .container-fluid -->
		</div> <!-- / .question -->

