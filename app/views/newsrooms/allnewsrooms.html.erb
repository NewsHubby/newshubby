<div class="shortPage">
<div class="container">
    <h2 class="text-center">Newsrooms</h2>
		<h5 class="text-center">Total # of Newsrooms: <%= @newsroom_count %></h5>
		<% @newsrooms.each do |newsroom| %>
    <p>
       <%= mail_to newsroom.email %>, <%= link_to newsroom.company_name, newsroom_path(newsroom) unless newsroom.company_name.blank? %>, <%= newsroom.created_at.strftime("%B %d, %Y | %H:%M") %> 
    </p> <!-- / .col-sm-6 -->
		<% end %>
</div> <!-- / .container -->

<div class="text-center"><%= will_paginate @newsrooms %></div>
</div>
</div>