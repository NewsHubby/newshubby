<div class="container-fluid pr-container">
    <div class="row pr-header">
        <div class="col-xs-12">
            <h4 class="pull-left">Press Release</h4>
            <h4 class="pull-right"><%= @press_release.embargo_date %></h4>
        </div> <!-- / .col-xs-12 -->
    </div> <!-- / .row01 -->
    <div class="row pr-heading">
        <div class="col-xs-5 col-xs-offset-1">
            <h3><%= @newsroom.company_name %></h3>
            <ul class="fa-ul">
                <li><i class="fa-li fa fa-calendar"></i>founded in <%= @newsroom.founded.strftime("%B, %Y") %></li>
                <li><i class="fa-li fa fa-home fa-lg"></i><%= link_to @newsroom.website, @newsroom.website %></li>
                <li><i class="fa-li fa fa-twitter fa-lg"></i><%= link_to "#{@newsroom.twitter.gsub(/.*\//, '')}", @newsroom.twitter.gsub(/@/, 'http://twitter.com/') %></li>
                <li><i class="fa-li fa fa-envelope"></i><%= mail_to @newsroom.press_email, @newsroom.press_email %></li>
                <li><i class="fa-li fa fa-phone fa-lg"></i><%= link_to @newsroom.press_phone, "tel:#{@newsroom.press_phone}" %></li>
                <li><i class="fa-li fa fa-map-marker fa-lg"></i><%= link_to "https://www.google.com/maps/place/#{@newsroom.latitude},#{@newsroom.longitude}", @newsroom.location, target: "_blank" %></li>
            </ul>
        </div> <!-- / .col-xs-5 col-xs-offset-1 -->
        <div class="col-xs-5">
            <div class="centerContainer">
                <div class="centerContent">
                    <%= image_tag @newsroom.logo.url(:medium), class: "img-responsive prCompanyLogo" %>
                </div> <!-- / .centerContent -->
            </div> <!-- / .centerContainer -->
        </div> <!-- / .col-xs-5 -->
    </div> <!-- / .row .pr-heading -->
    <div class="row">
                    <div class="col-xs-10 col-xs-offset-1">
                        <h1><%= @press_release.title %></h1><br>
                        <div class="feature-img-area">
                            <%= link_to (image_tag @press_release.uploads.first.file.url(:medium), class: "thumbLogo", alt: ""), "#" %>
                            <div class="feature-img-caption">
                                <p><small><%= @press_release.uploads.first.caption %></small></p>
                            </div> <!-- /.feature-img-caption -->
                        </div> <!-- / .feature-img-area -->
                        <p>
                            <span id="pr-answer-01"><%= simple_format(@newsroom.q_what_you_do) %></span>
                            <span id="pr-answer-02"><%= simple_format(@newsroom.q_how_you_achieve) %></span>
                            <span id="pr-answer-03">03. We have a mobile service that allows... </span>
                        </p>

                        <p>
                            <span id="pr-answer-04"><%= simple_format(auto_link(@press_release.specifics[:quote], :target => '_blank')) %></span>
                        </p>

                        <p>
													<%= @newsroom.company_name %> is founded by
													<% people = @newsroom.people.where(founder: true) %>
									 
													<%= people.collect { |p| p.name }.to_sentence %>
													on <%= @newsroom.founded.strftime("%B, %Y") %> and is funded by
									
													<%= @newsroom.fundings.collect { |fund| [fund.name, fund.investment_type] }.to_sentence %>
												</p> 

                        <h4>Probem Solved</h4>
                        <p><%= simple_format(@newsroom.problem_solved) %></p>

                        <h4>Business Model</h4>
                        <p><%= simple_format(@newsroom.business_model) %></p>

                        <h4>Competitors</h4>
                        <p><%= simple_format(@newsroom.competitors) %></p>

                        <h4>Funding</h4>
                        <ul>
													<% @newsroom.fundings.each do |funding| %>
                            <li><strong><%= funding.date.capitalize %>: </strong>$<%= funding.amount %><br><%= funding.name %></li>
													<% end %>
                            <li><strong>MAY 03 2014: </strong>$50.000<br>Superman</li>
                        </ul>	

                        <h4>The Team</h4>
                        <div class="row">
													<% @newsroom.people.each do |person| %>
                            <div class="col-xs-6">
                                <p><strong><%= person.name %></strong>&nbsp;(<%= person.role %>)<br><small><%= person.presentation %></small></p>
                            </div>
													<% end %>
                        </div> <!-- / .row -->
                        <h4>Links</h4>
                        <ul>
													<%= @press_release.links.each do |link| %>
													<% unless link.link.include? "youtube.com" || "youtu.be" || "vimeo.com"  %>
                            <li><%= link_to link.caption, link.link %></li>
													<% end %><% end %>
                        </ul><br>
                        <div class="row">
													<%= @press_release.uploads.each do |upload| %>
                            <div class="col-xs-4">
															<%= link_to upload.file.url, class: "thumbnail" do %>
                                    <%= image_tag upload.file.url(:medium), alt: "" %>
                                    <p><small><%= upload.caption %></small></p>
                               <% end %>
                            </div>
													<% end %>
													
													<%= @press_release.links.each do |link| %>
													<% if link.link.include? "youtube.com" %>
                            <div class="col-xs-4">
                                <div class="embed-responsive embed-responsive-4by3">
                                    <iframe class="embed-responsive-item" src="//www.youtube.com/embed/<%= link.link.gsub(/.*v=/, '') %>" frameborder="0" allowfullscreen></iframe>
                                </div>
                                <p><small><%= link.caption %></small></p>
                            </div>
													<% end %>
													
													<% if link.link.include? "youtu.be" %>
                            <div class="col-xs-4">
                                <div class="embed-responsive embed-responsive-4by3">
                                    <iframe class="embed-responsive-item" src="//www.youtube.com/embed/<%= link.link.gsub(/.*youtu.be\//, '') %>" frameborder="0" allowfullscreen></iframe>
                                </div>
                                <p><small><%= link.caption %></small></p>
                            </div>
													<% end %>
													
													<% if link.link.include? "vimeo.com" %>
                            <div class="col-xs-4">
                                <div class="embed-responsive embed-responsive-4by3">
                                    <iframe class="embed-responsive-item" src="//player.vimeo.com/video/<%= link.link.gsub(/.*com\//, '') %>" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
                                </div>
                                <p><small><%= link.caption %></small></p>
                            </div>
													<% end %>
													
													<% end %>
                        </div>
                    </div> <!-- / .col-xs-10 col-xs-offset-1 -->
                </div> <!-- / .row -->
    <hr>
    <div class="row">
        <div class="col-xs-12">
						<%= link_to root_path, target: "_blank", class: "pr-generated" do %>
							<p class="text-center">PRESS RELEASE GENERATED WITH</p>
							<%= image_tag "newshubby_logotype.svg", class: "center-block", alt: "Link to www.newshubby.com", width: "200" %>
						<% end %>
            <br>
        </div> <!-- / .col-xs-12 -->
    </div> <!-- / .row -->
</div> <!-- / .prContainer -->