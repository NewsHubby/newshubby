<% if @newsroom.business_model.blank? %>
<div class="question" id="q<%= index+10 %>">
<% else %>
<div class="question" id="q<%= index+1 %>">
<% end %>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <h4 class="question-title">
									<% if @newsroom.business_model.blank? %>
										Question <%= index+10 %>
									<% else %>
										Question <%= index+1 %>
									<% end %>
								</h4>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-close pull-right"></i>
                        <i class="fa fa-question-circle fa-lg intHelp pull-right hidden-xs text-primary hints" data-toggle="tooltip" data-placement="left" title="Toggle help"></i>
                        <p class="panel-title text-left"><%= field.question.gsub(/CompanyName/, "#{@newsroom.company_name}").gsub(/CompanyName's/, "#{@newsroom.company_name.possessive}") %></p>
                    </div> <!-- / .panel-heading -->
                    <div class="panel-body">
											<%= press_release.label field.name %><br />
											<%= press_release.date_select field.name, selected: Date.today %>
                    </div> <!-- / .panel-body -->
                    <div class="panel-footer clearfix">
                        <div class="pull-left" id="textareaFeedback"></div>
                        <!-- <button type="button" class="btn btn-primary pull-right" id="save">Save <i class="fa fa-arrow-right"></i></button> -->
                    </div><!--/ .panel-footer -->
                </div> <!-- / .panel -->
            </div> <!-- / .col-xs-12 -->
        </div> <!-- / .row -->
    </div> <!-- / .container-fluid -->
</div> <!-- / .question -->