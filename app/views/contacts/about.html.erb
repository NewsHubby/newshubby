<% title "About NewsHubby" %>


<div class="container-fluid">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<%= image_tag "newshubby_logotype.svg", width: "95%", class: "center-block" %>
			<br>
		</div>
		<br>
	</div><!-- / .row -->
	<div class="row">
		<div class="container aboutNH text-center">
			<h3>What we do</h3>
			<div class="col-sm-6 col-sm-offset-3">
				<p>NewsHubby helps you create and distribute press releases. We are offering an online DIY tool for creating, hosting and distribution of press releases to media worldwide.
				</p><br>
			</div>
		</div>
	</div><!-- / .row -->
</div> <!-- / .container-fluid -->
	<div class="container-fluid fullRow">
		<h3 class="text-center">Contact NewsHubby</h3>
		<div class="col-sm-4 col-sm-offset-4">
			<%= form_for @contact do |f| %>
				<div class="form-group">
					<%= f.text_field :name, class: "form-control", id: "sender", placeholder: "Name" %>
				</div>
				<div class="form-group">
					<%= f.text_field :email, class: "form-control", id: "center", placeholder: "Email" %>
				</div>
				<div class="form-group">
					<%= f.text_area :message, class: "form-control", rows: 5, placeholder: "Message" %>
				</div>
					<%= f.submit "Send", class: "btn btn-success center-block" %>
				<% end %>
			<br>
			<p class="text-center"><%= mail_to "hello@newshubby.com" %></p>
		</div>
	</div>
<div class="container aboutNH aboutTeam">
	<div class="row text-center">
		<br>
		<h3>The Team</h3>
		<div class="col-sm-4">
			<div class="panel">
				<%= image_tag "about/ceo.jpg", class: "img-responsive center-block" %>
				<div class="panel-body">
					<h4>Alexandra Bylund</h4>
					<h6>Founder &amp; CEO</h6>
					<p>Mother of two, podcast lover and communication nerd that gets her best ideas while running.</p>
					<a href="mailto:alexandra@newshubby.com">
						<i class="fa fa-envelope"></i>
					</a>
					&emsp;
					<%= link_to "http://twitter.com/AlexandraBylund", target: "_blank" do %>
						<i class="fa fa-twitter"></i>
					<% end %>
					&emsp;
					<%= link_to "http://se.linkedin.com/in/alexandrabylund/sv", target: "_blank" do %>
						<i class="fa fa-linkedin"></i>
					<% end %>
				</div>
			</div>
		</div>
		<div class="col-sm-4">
			<div class="panel">
				<%= image_tag "about/backend.jpg", class: "img-responsive center-block" %>
				<div class="panel-body">
					<h4>Robert Knutsson</h4>
					<h6>CTO & Back-end Developer</h6>
					<p>Economics PhD dropout, free market fundamentalist and aspiring polymath.</p>
					<a href="mailto:robert@newshubby.com">	
						<i class="fa fa-envelope"></i>
					</a>
					&emsp;
					<%= link_to "http://twitter.com/viljavarasto", target: "_blank" do %>
						<i class="fa fa-twitter"></i>
					<% end %>
